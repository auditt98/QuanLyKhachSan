@model NhomNguoiDungModel

@Html.AntiForgeryToken()

<div class="form-group row">
    @Html.LabelFor(model => model.Ma, "Mã Nhóm người dùng:", htmlAttributes: new { @class = "control-label col-md-2 text-right" })
    <div class="col-md-3">
        <input name="ma" hidden value="@Model.Ma" />
        <input id="ma" class="form-control disabled" disabled value="@Model.Ma" />
        @Html.ValidationMessageFor(model => model.Ma, "", new { @class = "text-danger" })
    </div>

</div>
<div class="form-group row">
    @Html.LabelFor(model => model.Ten, "Tên nhóm người dùng", htmlAttributes: new { @class = "control-label col-md-2 text-right" })
    <div class="col-md-3">
        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
    </div>
</div>

<br class="dropdown-divider" />
<div class="dropdown-divider"></div>
<h5>Gán quyền cho nhóm người dùng</h5>
<br />
<div class="row" style="width: 100%; margin-bottom: 0px;">
    <div class="col-md-3"></div>
    <table class="table table-hover table-bordered table-striped col-md-6">
        <thead>
            <tr>
                <th scope="col" width="80%" class="text-center">Tên quyền</th>
                <th scope="col" class="text-center">Gán</th>
            </tr>
        </thead>
    </table>

</div>
<div class="row" style="height: 700px; overflow-y: scroll;">
        <div class="col-md-3" style="margin: 0px;"></div>
        <table class="table table-hover table-bordered table-striped col-md-6" >
            <tbody>
                @foreach (var quyen in Model.DanhSachQuyen)
                {
                    <tr>
                        <th scope="row">@quyen.Text</th>
                        <td class="text-center">
                            <input type="checkbox" name="SelectedQuyens" value="@quyen.Value"
                                   @if (quyen.Selected) { <text> checked </text>  } />
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

