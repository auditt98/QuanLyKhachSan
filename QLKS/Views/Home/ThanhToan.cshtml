
@{
	ViewBag.Title = "ThanhToan";
	Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
	<script src="/Scripts/jquery-3.5.1.js"></script>
@section scripts{
	<script src="~/Scripts/controller/DatPhong.js"></script>
}
<div id="content" class="content-area page-wrapper" role="main">
	<div class="row row-main">
		<div class="large-12 col">
			<div class="col-inner">

				<header class="entry-header">
					<p id="breadcrumbs"><span><span><a href="~/Home/DatPhong">Đặt Phòng</a> » <span class="breadcrumb_last" aria-current="page">Thanh toán</span></span></span></p>					<h1 class="entry-title mb uppercase">Thanh toán</h1>
				</header><!-- .entry-header -->			
				@if (ViewBag.err != null)
				{
					<div id="AlertBox" class="alert-error hide" style="color:red">
						@ViewBag.err
					</div>
				}
				@if (ViewBag.suc != null)
				{
					<div id="AlertBox" class="alert-success hide" style="color:lawngreen">
						@ViewBag.suc
					</div>
				}

				<div class="woocommerce">

					<div class="woocommerce-notices-wrapper"></div>
					<form name="checkout" method="post" class="checkout woocommerce-checkout " action="ThanhToan" enctype="multipart/form-data">

						<div class="row pt-0 ">
							<div class="large-7 col  ">


								<div id="customer_details">
									<div class="clear">
										<div class="woocommerce-billing-fields">

											<h3>Thông tin thanh toán</h3>



											<div class="woocommerce-billing-fields__field-wrapper">
												<p class="form-row form-row-wide validate-required" id="billing_last_name_field" data-priority="">
													<label for="billing_last_name" class="">Họ và tên&nbsp;<abbr class="required" title="bắt buộc">*</abbr></label>
													<span class="woocommerce-input-wrapper">
														<input type="text" class="input-text " name="txtName" placeholder="Nhập đầy đủ họ và tên của bạn" value="" />
													</span>
												</p>
												<p class="form-row address-field form-row-first validate-required" id="billing_address_1_field" data-priority="50">
													<label for="billing_address_1" class="">Số CMND&nbsp;<abbr class="required" title="bắt buộc">*</abbr></label>
													<span class="woocommerce-input-wrapper">
														<input type="text" class="input-text " name="txtCMND" placeholder="..." value="" autocomplete="address-line1" />
													</span>
												</p>
												<p class="form-row form-row-wide validate-required validate-phone" id="billing_phone_field" data-priority="100">
													<label for="billing_phone" class="">Số điện thoại&nbsp;<abbr class="required" title="bắt buộc">*</abbr></label><span class="woocommerce-input-wrapper">
														<input type="tel" class="input-text " name="txtPhone" placeholder="..." value="" autocomplete="tel" />
													</span>
												</p><p class="form-row form-row-wide validate-required validate-email" id="billing_email_field" data-priority="110">
													<label for="billing_email" class="">Địa chỉ email&nbsp;<abbr class="required" title="bắt buộc">*</abbr></label><span class="woocommerce-input-wrapper">
														<input type="email" class="input-text " name="txtEmail" placeholder="..." value="" autocomplete="email username" />
													</span>
												</p>
											</div>

										</div>

									</div>

									<div class="clear">
										<div class="woocommerce-shipping-fields">
										</div>
										<div class="woocommerce-additional-fields">

											<button type="submit" class="button alt" name="woocommerce_checkout_place_order" id="place_order" value="Đặt hàng" data-value="Đặt hàng"> Đặt Phòng </button>
										</div>
									</div>
								</div>



							</div><!-- large-7 -->



							<aside class="hotel-content__aside">

								<div class=" reservation">
									<h2 class="reservation__title">Tóm tắt đặt phòng</h2>
									<div class="reservation__empty">
										<span><i class="aficon aficon-bed"></i></span>
										<p>Không có phòng được chọn</p>
									</div>
									<div class="thongTinDatPhong">

									</div>


								</div><!-- /.reservation -->
							</aside>



						</div><!-- row -->
					</form>

				</div>


			</div><!-- .col-inner -->
		</div><!-- .large-12 -->
	</div><!-- .row -->
</div>

