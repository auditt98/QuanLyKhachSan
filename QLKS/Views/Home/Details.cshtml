@model QLKS.Domain.LOAIPHONG

@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

	<div id="cover-photo" class="container-fluid cover-bg" style="		height: 75vh;
		background-image: url('../../Content/imgLoaiPhong/@Model.anh');
		position: relative;
		padding: 0px;
		min-height: 450px;">
		<div class="cover-gradient" style="position: absolute; bottom: 0px; width: 100%; background-image: linear-gradient(rgba(0, 0, 0, 0) 0px, rgba(0, 0, 0, 0.9) 100%); color: white;"></div>
		<div style="position: absolute; bottom: 0px; width: 100%; text-align: center; padding-bottom: 20px; padding-left: 15px; padding-right: 15px;">
			<h1 class="page-title" style="margin-top: 5px; margin-bottom: 5px; text-transform: uppercase;">@Model.tenloaiphong</h1>
		</div>
	</div>
	<div id="gembooking-container" class="container">
		<div id="gembooking-main" class="gembooking-main" role="main">
			<article id="room-323" class="room post-323 room_type type-room_type status-publish has-post-thumbnail hentry">
				<div class="hotel-content">
					<div class="hotel-content__main">
						<header class="room__header">
							<ul class="roommaster-info__list">
								<li class="info-item">
									<span class="info-icon">
										<i class="aficon aficon-business"></i>
										<span class="screen-reader-text">Room view</span>
									</span>
									@Model.khungnhin
								</li>
								<li class="info-item">
									<span class="info-icon">
										<i class="aficon aficon-sqm"></i>
										<span class="screen-reader-text">Area size</span>
									</span>
									@Model.dientich m<sup>2</sup>
								</li>
								<li class="info-item">
									<span class="info-icon">
										<i class="aficon aficon-bed"></i>
										<span class="screen-reader-text">Giường</span>
									</span>
									<span> @Model.giuong </span>
								</li>
							</ul>

						</header>

						<div class="room__sections">

							<div class="room__section room-description-section">
								<h4 class="room__section-title">Giới thiệu</h4>

								<div class="room__content">
									<p>✔️ Căn phòng giành cho 4 người và 2 trẻ nhỏ, có sofa bed dành cho khách hàng</p>
									<p>✔️ Không gian yên tỉnh phù hợp cho gia đình, có view hướng về thành phố, nhà thờ con gà</p>
									<p>✔️ Căn hộ mang đến cho bạn đầy đủ những tiện nghi hiện đại, thoải mái</p>
									<p>Không gian yên tỉnh phù hợp cho gia đình, có view hướng về thành phố, nhà thờ con gà. Chúng tôi luôn muốn mang đến cho bạn những điều tuyệt vời nhất, cung cấp cho bạn đầy đủ những tiện nghi vừa hiện đại, vừa thoải mái khiến cho bạn có cảm giác như mình đang ở trong chính ngôi nhaf của mình vậy.</p>
									<p>Bạn gặp vấn đề ở đâu? Về khách sạn của chúng tôi, về các vật dụng trong khách sạn hay bất cứ vấn đề gì bạn cũng có thể liên lạc trực tiếp với tôi. Tôi rất sẵn lòng để giúp đỡ bạn. Tôi cũng có thể giúp bạn thuê xe đạp hoặc chia sẻ với bạn những địa điểm ăn uống và mua sắm tốt ở địa phương với mức giá hợp lý. Hãy hỏi tôi bất cứ điều gì đang thắc mắc nhé!</p>
								</div>
							</div>

							<div class="room__section room-amenities-section">
								<h4 class="room__section-title">Tiện nghi</h4>

								<ul id="amenities-323" class="room-amenities">
									<li class="room-amenity">
										<i class="aficon aficon-checkmark"></i>
										<span class="room-amenity__title">Điểm tâm sáng</span>
									</li>
									<li class="room-amenity">
										<i class="aficon aficon-checkmark"></i>
										<span class="room-amenity__title">Điều hòa</span>
									</li>
									<li class="room-amenity">
										<i class="aficon aficon-checkmark"></i>
										<span class="room-amenity__title">Giặt là</span>
									</li>
									<li class="room-amenity">
										<i class="aficon aficon-checkmark"></i>
										<span class="room-amenity__title">Hồ bơi</span>
									</li>
									<li class="room-amenity">
										<i class="aficon aficon-checkmark"></i>
										<span class="room-amenity__title">Minibar</span>
									</li>
									<li class="room-amenity">
										<i class="aficon aficon-checkmark"></i>
										<span class="room-amenity__title">Wifi phủ sóng</span>
									</li>
								</ul>
							</div>

							<div class="room__section room-gallery-section box-gallery">
								<h4 class="room__section-title">Bộ sưu tập</h4>

								<ul class="room-gallery">
									<li class="gl-item h-200 w-50 w-mb-100">
										<a class="image-lightbox lightbox-gallery" href="#">
											<div class="cover-bg" style="background-image: url('../../Assets/User/wp-content/uploads/2019/04/drink-3.jpg');width: 100%;height: 100%"></div><span class="img-gallery" style="display: none;"><img width="300" height="300" src="../../wp-content/uploads/2019/04/drink-3-300x300.jpg" class="attachment-gembooking_thumbnail size-gembooking_thumbnail" alt="" srcset="https://hotel.sonqb.com/wp-content/uploads/2019/04/drink-3-300x300.jpg 300w, https://hotel.sonqb.com/wp-content/uploads/2019/04/drink-3-150x150.jpg 150w" sizes="(max-width: 300px) 100vw, 300px" /></span><div class="image-overlay"></div>
										</a>
									</li>
									<li class="gl-item h-200 w-50 hidden-xs"><a class="image-lightbox lightbox-gallery" href="#"><div class="cover-bg" style="background-image:url(../../Assets/User/wp-content/uploads/2019/04/demo-59.jpg);width:100%;height:100%"></div><span class="img-gallery" style="display: none;"><img width="300" height="300" src="../../wp-content/uploads/2019/04/demo-59-300x300.jpg" class="attachment-gembooking_thumbnail size-gembooking_thumbnail" alt="" srcset="https://hotel.sonqb.com/wp-content/uploads/2019/04/demo-59-300x300.jpg 300w, https://hotel.sonqb.com/wp-content/uploads/2019/04/demo-59-150x150.jpg 150w" sizes="(max-width: 300px) 100vw, 300px" /></span><div class="image-overlay"></div></a></li>
									<li class="gl-item h-400 w-33 hidden-xs"><a class="image-lightbox lightbox-gallery" href="#"><div class="cover-bg" style="background-image:url(../../Assets/User/wp-content/uploads/2019/05/about.jpg);width:100%;height:100%"></div><span class="img-gallery" style="display: none;"><img width="300" height="300" src="../../wp-content/uploads/2019/05/about-300x300.jpg" class="attachment-gembooking_thumbnail size-gembooking_thumbnail" alt="" srcset="https://hotel.sonqb.com/wp-content/uploads/2019/05/about-300x300.jpg 300w, https://hotel.sonqb.com/wp-content/uploads/2019/05/about-150x150.jpg 150w" sizes="(max-width: 300px) 100vw, 300px" /></span><div class="image-overlay"></div></a></li>
									<li class="gl-item h-200 w-33 w-mb-50"><a class="image-lightbox lightbox-gallery" href="#"><div class="cover-bg" style="background-image:url(../../Assets/User/wp-content/uploads/2019/02/bg-slide-hotel.jpg);width:100%;height:100%"></div><span class="img-gallery" style="display: none;"><img width="300" height="101" src="../../wp-content/uploads/2019/02/bg-slide-hotel.jpg" class="attachment-gembooking_thumbnail size-gembooking_thumbnail" alt="" srcset="https://hotel.sonqb.com/wp-content/uploads/2019/02/bg-slide-hotel.jpg 1600w, https://hotel.sonqb.com/wp-content/uploads/2019/02/bg-slide-hotel-300x101.jpg 300w, https://hotel.sonqb.com/wp-content/uploads/2019/02/bg-slide-hotel-768x259.jpg 768w, https://hotel.sonqb.com/wp-content/uploads/2019/02/bg-slide-hotel-1024x346.jpg 1024w" sizes="(max-width: 300px) 100vw, 300px" /></span><div class="image-overlay"></div></a></li>
									<li class="gl-item h-200 w-33 w-mb-50"><a class="image-lightbox lightbox-gallery" href="#"><div class="cover-bg" style="background-image:url(../../Assets/User/wp-content/uploads/2019/02/1512358866_IMG_5387.jpg);width:100%;height:100%"></div><span class="img-gallery" style="display: none;"><img width="300" height="200" src="../../wp-content/uploads/2019/02/1512358866_IMG_5387.jpg" class="attachment-gembooking_thumbnail size-gembooking_thumbnail" alt="" srcset="https://hotel.sonqb.com/wp-content/uploads/2019/02/1512358866_IMG_5387.jpg 1200w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1512358866_IMG_5387-300x200.jpg 300w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1512358866_IMG_5387-768x512.jpg 768w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1512358866_IMG_5387-1024x683.jpg 1024w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1512358866_IMG_5387-600x400.jpg 600w" sizes="(max-width: 300px) 100vw, 300px" /></span><div class="image-overlay"></div></a></li>
									<li class="gl-item h-200 w-66 w-mb-100"><a class="image-lightbox lightbox-gallery" href="#"><div class="cover-bg" style="background-image:url(../../Assets/User/wp-content/uploads/2019/02/1509860313_SGMS1845.jpg);width:100%;height:100%"></div><span class="img-gallery" style="display: none;"><img width="300" height="200" src="../../wp-content/uploads/2019/02/1509860313_SGMS1845.jpg" class="attachment-gembooking_thumbnail size-gembooking_thumbnail" alt="" srcset="https://hotel.sonqb.com/wp-content/uploads/2019/02/1509860313_SGMS1845.jpg 1200w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1509860313_SGMS1845-300x200.jpg 300w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1509860313_SGMS1845-768x512.jpg 768w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1509860313_SGMS1845-1024x683.jpg 1024w, https://hotel.sonqb.com/wp-content/uploads/2019/02/1509860313_SGMS1845-600x400.jpg 600w" sizes="(max-width: 300px) 100vw, 300px" /></span><div class="image-overlay"></div></a></li>
								</ul>
							</div>
						</div>
					</div><!-- /.hotel-content__main -->

					<aside class="hotel-content__aside">
						<div class="search-rooms__form">
							<p class="room__price">
								Giá từ <span><span class="gembooking-price "><span class="gembooking-price__amount">@Model.ma</span>&nbsp;<span class="gembooking-price__symbol">&#8363;</span></span></span>/đêm
							</p>
							<form id="gembooking_searchbox_1" action="https://hotel.sonqb.com/he-thong-phong/" method="GET" role="search" novalidate>
								<input name="only" type="hidden" value="323">
								<div class="searchbox searchbox--vertical">
									<div class="searchbox__wrap">
										<div class="searchbox__box searchbox__box--checkin">
											<div class="searchbox__box-wrap">
												<div class="searchbox__box-line">
													<label class="searchbox__box-label"><span>Ngày đến</span></label>

													<div class="searchbox__box-input">
														<input type="text" readonly data-bind="value: checkInFormatted()" class="searchbox__input searchbox__input--checkin input-transparent" placeholder="2020-05-15" autocomplete="off" aria-haspopup="true">
														<input type="hidden" data-bind="value: checkInDate" name="check_in" value="2020-05-15">
													</div>
												</div>
											</div>
										</div>

										<div class="searchbox__box searchbox__box--checkout">
											<div class="searchbox__box-wrap">
												<div class="searchbox__box-line">
													<label class="searchbox__box-label"><span>Ngày đi</span></label>

													<div class="searchbox__box-input">
														<input type="text" readonly data-bind="value: checkOutFormatted()" class="searchbox__input searchbox__input--checkout input-transparent" placeholder="2020-05-16" autocomplete="off" aria-haspopup="true">
														<input type="hidden" data-bind="value: checkOutDate" name="check_out" value="2020-05-16">
													</div>
												</div>
											</div>
										</div>
										<div class="searchbox__box searchbox__box--occupancy">
											<div class="searchbox__box-wrap">
												<div class="searchbox__box-line">
													<label class="searchbox__box-label">
														<span>Khách hàng</span>
													</label>

													<div class="searchbox__box-input searchbox-occupancy-info">
														<span class="searchbox-occupancy-info__item">
															<span class="searchbox-occupancy-info__number" data-bind="text: adults">1</span>
															người lớn
														</span>

														<span class="searchbox-occupancy-info__item">
															<span class="searchbox-occupancy-info__number" data-bind="text: children">0</span>
															trẻ em
														</span>

													</div>
												</div>
											</div>

											<div class="searchbox__popup">
												<div class="searchbox__popup-item searchbox__popup-item--adults">
													<label>
														<span>Người lớn</span>
														<input type="number" name="adults" data-bind="value: adults" min="1" max="6" value="1" class="searchbox__input form-input-transparent" />
													</label>
												</div>

												<div class="searchbox__popup-item searchbox__popup-item--children">
													<label>
														<span>Trẻ em</span>
														<input type="number" name="children" data-bind="value: children" min="0" max="6" value="0" class="searchbox__input form-input-transparent" />
													</label>
												</div>

											</div>
										</div>
										<div class="searchbox__box searchbox__box--button">
											<div class="searchbox__box-wrap">
												<button type="submit" class="button button--primary searchbox__submit">Sẵn sàng kiểm tra</button>
											</div>
										</div>
									</div><!-- /.searchbox__wrapper-->

								</div><!-- /.searchbox-->
							</form>
						</div>
					</aside><!-- /.hotel-content__aside -->
				</div><!-- /.hotel-content -->
			</article><!-- #room-323 -->
		</div>
	</div><!-- /#gembooking-container -->

