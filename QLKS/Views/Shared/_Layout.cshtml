@using QLKS.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />
    <link href="~/Content/datepicker.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/responsive.bootstrap4.min.css" rel="stylesheet" />

</head>
<body style="display:flex; flex-direction: column;">
    <nav id="headroom" class="sb-topnav navbar navbar-expand navbar-dark bg-superdark card-shadow-1">
        <a class="navbar-brand font-weight-bold" href="index.html">Quản lý khách sạn</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>
        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">

        </div>
        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" href="/NguoiDung/DangNhap">Đăng nhập</a>
                    <a class="dropdown-item" href="/NguoiDung/DoiMatKhau">Thay đổi mật khẩu người dùng</a>
                    <a class="dropdown-item" href="#">Đăng xuất</a>
                </div>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav" class="card-shadow-2">
            <nav class="sb-sidenav accordion sb-sidenav-dark card-shadow-2" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Thống kê</div>
                        <a class="nav-link" href="/DoanhThu" id="ThongKeDoanhThu">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-bar"></i></div>
                            Thống kê doanh thu
                        </a>
                        <a class="nav-link" id="ThongKeDatPhong" href="/DoanhThu/DoanhThuDP">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Thống kê số lượng đặt phòng
                        </a>
                        <a class="nav-link" id="ThongKeDichVu" href="/DoanhThu/DoanhThuDV">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Thống kê doanh thu dịch vụ
                        </a>

                        <div class="sb-sidenav-menu-heading">Danh mục</div>
                        <a class="nav-link" id="DanhMucLoaiPhong" href="/LoaiPhong/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-archway"></i></div>
                            Loại phòng
                        </a>
                        <a class="nav-link" id="DanhMucPhong" href="/Phong/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-person-booth"></i></div>
                            Phòng
                        </a>
                        <a class="nav-link" id="DanhMucDichVu" href="/DichVu/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-cocktail"></i></div>
                            Dịch vụ
                        </a>
                        <a class="nav-link" id="DanhMucVatTu" href="/VatTu/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-couch"></i></div>
                            Vật tư
                        </a>
                        <a class="nav-link" id="DanhMucKhachHang" href="/KhachHang/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-id-card"></i></div>
                            Khách hàng
                        </a>
                        <a class="nav-link" id="DanhMucTinhTrang" href="/LoaiTinhTrang/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-info-circle"></i></div>
                            Loại tình trạng
                        </a>
                        <div class="sb-sidenav-menu-heading">Nghiệp vụ</div>
                        <a class="nav-link" id="NghiepVuThuePhong" href="/ThuePhong/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-arrow-circle-right"></i></div>
                            Thuê phòng
                        </a>
                        <a class="nav-link" id="NghiepVuTraPhong" href="/NghiepVu/TraPhong">
                            <div class="sb-nav-link-icon"><i class="fas fa-arrow-circle-left"></i></div>
                            Trả phòng
                        </a>
                        <a class="nav-link" id="DanhSachPhongDatTruoc" href="/DatPhong/List">
                            <div class="sb-nav-link-icon"><i class="fas fa-list"></i></div>
                            Danh sách phòng đặt trước
                        </a>
                        <div class="sb-sidenav-menu-heading">Hệ thống</div>
                        <a class="nav-link" id="HeThongNguoiDung" href="/HeThong/NguoiDung">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Quản lý người dùng
                        </a>
                        <a class="nav-link" id="HeThongLichSu" href="/HeThong/LichSu">
                            <div class="sb-nav-link-icon"><i class="fas fa-clipboard-list"></i></div>
                            Lịch sử hệ thống
                        </a>
                        <div class="sb-sidenav-footer">
                            <div>Phần mềm quản lý khách sạn</div>
                            <div class="small">Trịnh Việt Anh - Hà Thị Kim Biên - Đỗ Đăng Khải</div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="position-fixed" style="z-index: 1000; position: sticky; bottom: 20px; right: 20px; width: 300px;">
            <div class="toast ml-auto" role="alert" data-delay="5000">
                <div class="toast-header bg-@Html.Raw(TempData["NotiType"])">
                    <strong class="mr-auto font-weight-bold text-white">Thông báo</strong>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">x</span>
                    </button>
                </div>
                <div class="toast-body"> @Html.Raw(TempData["Message"]) </div>
            </div>
        </div>
        <div id="layoutSidenav_content">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs=" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.js"></script>
    <script src="~/Scripts/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/responsive.bootstrap4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Scripts/notify.min.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/headroom.js"></script>
    <script src="~/Scripts/datepicker.min.js"></script>
    <script>

        $.fn.datepicker.language['vi'] = {
    days: ["Chủ nhật", "Thứ hai", "Thứ ba", "Thứ tư", "Thứ năm", "Thứ sáu", "Thứ bảy"],
    daysShort: ["CN", "Hai", "Ba", "Tư", "Năm", "Sáu", "Bảy"],
    daysMin: ["CN", "T2", "T3", "T4", "T5", "T6", "T7"],
    months: ["Tháng một", "Tháng hai", "Tháng ba", "Tháng tư", "Tháng năm", "Tháng sáu", "Tháng bảy", "Tháng tám", "Tháng chín", "Tháng mười", "Tháng mười một", "Tháng mười hai"],
    monthsShort: ["Một", "Hai", "Ba", "Bốn", "Năm", "Sáu", "Bảy", "Tám", "Chín", "Mười", "Mười một", "Mười hai"],
    today: 'Hôm nay',
    clear: 'Xóa',
    dateFormat: 'dd/mm/yyyy',
    timeFormat: 'hh:ii aa',
    firstDay: 1
};
        $('.datepicker-here').datepicker({
    language: 'vi'
})
    </script>
    @RenderSection("scripts", required: false)
    @{
        var message = String.IsNullOrEmpty(Html.Raw(TempData["Message"]).ToString());
        var type = Html.Raw(TempData["NotiType"]);
        if (message == false)
        {
            <script>
                $('.toast').toast('show')
            </script>
        }
    }
    <script>
    (function ($) {
        "use strict";
        // Add active state to sidbar nav links
        var path = window.location.href; // because the 'href' property of the DOM element is the absolute path

        $("#layoutSidenav_nav .sb-sidenav a.nav-link").each(function () {
            var url = window.location.pathname.split("/");
            var controller = url[1];
            var link = this.href.toString().split('/');
            var linkController = link[3];
            if(controller == linkController){
                $(this).addClass("active");
            }
        });
        $("#sidebarToggle").on("click", function (e) {
            e.preventDefault();
            $("body").toggleClass("sb-sidenav-toggled");
        });

    })(jQuery);
    
        function toVND(data){
             return data.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' })
        };
    </script>
</body>
</html>
