@using QLKS.Models
@model KhachHangSearchModel

@{
    ViewBag.Title = "Danh mục khách hàng";

}

<div class="content-header clearfix">
    <h5 class="float-left">
        @ViewBag.Title
    </h5>
    <div class="float-right" style="margin-bottom:5px;">
        <a href="/KhachHang/Create" class="btn btn-success">
            <i class="fa fa-plus-square"></i>
            <span class="text-white">Thêm mới</span>
        </a>
    </div>
</div>
<div class=" px-4 pt-4 mb-4" style="padding-bottom: 24px;">
    <div class="form-group row">
        <label class="col-form-label col-sm-2 text-sm-right">Từ khóa:</label>
        <div class="col-sm-8">
            <input name="Key" class="form-control" id="Key"/>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-sm btn-primary" id="btnSearch">Tìm kiếm</button>
        </div>
    </div>

</div>
<table id="table_dataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
    <thead>
        <tr>
            <th>Mã khách hàng</th>
            <th>Tên khách hàng</th>
            <th>Số CMT</th>
            <th>Số điện thoại</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#table_dataTable').DataTable({
                ajax: {
                    "url": "/KhachHang/PopulateKhachHang/",
                    "type": "POST",
                    dataSrc: '',
                    data: function (data) {
                        console.log(data)
                    }
                }
            });
        });
    </script>
    
}


