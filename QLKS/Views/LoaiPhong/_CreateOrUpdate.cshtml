    <div class="col-md-3">
        @Html.EditorFor(model => model.SoNguoiLon, new { htmlAttributes = new { @class = "form-control", @value = "0" } })
        @Html.ValidationMessageFor(model => model.SoNguoiLon, "", new { @class = "text-danger" })
    </div>
    @Html.LabelFor(model => model.SoTreEm, "Số trẻ em", htmlAttributes: new { @class = "control-label col-md-2 text-right text-required", @value = "0" })
    <div class="col-md-4">
        @Html.EditorFor(model => model.SoTreEm, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SoTreEm, "", new { @class = "text-danger" })
    </div>
</div>

