@model KhachHangModel

@*@Html.AntiForgeryToken()*@

<div class="form-group row">
    <label class="control-label col-md-2 text-right">Mã phiếu đặt:</label>
    @*@Html.LabelFor(model => model.ma, "Mã:", htmlAttributes: new { @class = "control-label col-md-2 text-right" })*@
    <div class="col-md-3">
        <input name="ma" hidden value="" />
        <input id="ma" class="form-control disabled" disabled value="DP-0000005" />
        @*@Html.ValidationMessageFor(model => model.ma, "", new { @class = "text-danger" })*@
    </div>
</div>
<br class="dropdown-divider" />
<div class="dropdown-divider"></div>
<h5>Thông tin khách đặt phòng</h5>
<br />

<div class="form-group row">
    <label class="control-label col-md-2 text-right">Tên khách hàng:</label>

    @*@Html.LabelFor(model => model.tenkhachhang, "Tên khách hàng:", htmlAttributes: new { @class = "control-label col-md-2 text-right" })*@
    <div class="col-md-3">
        <input class="form-control" />
        @*@Html.EditorFor(model => model.tenkhachhang, new { htmlAttributes = new { @class = "form-control" } })*@
        @*@Html.ValidationMessageFor(model => model.tenkhachhang, "", new { @class = "text-danger" })*@
    </div>
    <div class="col-md-7">
        <label class="control-label col-md-2 text-right">Giới tính:</label>
        <div class="custom-control custom-radio custom-control-inline" style="margin-left: 10px">
            <input type="radio" class="custom-control-input" id="customRadio" name="gioitinh" value="true" checked="checked">
            <label class="custom-control-label" for="customRadio">Nam</label>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" class="custom-control-input" id="customRadio2" name="gioitinh" value="false">
            <label class="custom-control-label" for="customRadio2">Nữ</label>
        </div>
    </div>
</div>


<div class="form-group row">
    <label class="control-label col-md-2 text-right">Số điện thoại:</label>
    <div class="col-md-3">
        <input class="form-control" />
    </div>
    @*@Html.LabelFor(model => model.sodienthoai, "Số điện thoại:", htmlAttributes: new { @class = "control-label col-md-2 text-right" })*@
    <div class="col-md-3">
        @*@Html.EditorFor(model => model.sodienthoai, new { htmlAttributes = new { @class = "form-control" } })*@
        @*@Html.ValidationMessageFor(model => model.sodienthoai, "", new { @class = "text-danger" })*@
    </div>
</div>
<br class="dropdown-divider" />
<div class="dropdown-divider"></div>
<h5>Thông tin hệ thống</h5>
<br />

<div class="form-group row">
    <div class="card border-success col-md-2" style="margin-left: 10px; margin-right: 10px;">
        <div class="card-header text-center">Số phòng trống</div>
        <div class="card-body text-success">
            <h3 class="card-title">20</h3>
        </div>
    </div>
    <div class="card border-warning col-md-2" style="margin-left: 10px; margin-right: 10px;">
        <div class="card-header">Số phòng đã đặt trước</div>
        <div class="card-body text-warning">
            <h3 class="card-title">10</h3>
        </div>
    </div>
    <div class="card border-info col-md-2" style="margin-left: 10px; margin-right: 10px;">
        <div class="card-header">Số phòng bẩn</div>
        <div class="card-body text-info">
            <h3 class="card-title">15</h3>
        </div>
    </div>
    <div class="card border-danger col-md-2" style="margin-left: 10px; margin-right: 10px;">
        <div class="card-header">Số phòng đang sử dụng</div>
        <div class="card-body text-danger">
            <h3 class="card-title">35</h3>
        </div>
    </div>
</div>
<br class="dropdown-divider" />
<div class="dropdown-divider"></div>
